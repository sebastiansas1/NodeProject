extends ../panels/layout
include ../components/form
  
block content

  .container.content

    h1 Add Review
    

    form#review_form
      //- Form Group with parameters (LabelName, ID, input, type, value)
      +form_group("Title", "title", "input", "text", "", "review-form-group")
      +form_group("Comment", "comment", "input", "text", "", "review-form-group")
      #star
      br
      
      label.btn.btn-primary
        .upload-message Select Pictures
        input(class="form-control" id="file" type='file' name='image' multiple,  style='visibility: hidden; height: 0px;')
        input(disabled='', class="form-control" type='submit' value='' id="upload-photo")
      button.btn.btn-purple.create-review(type="submit") Save
      
      
  script(src='/javascripts/review.js')
  script(src='/javascripts/upload.js')